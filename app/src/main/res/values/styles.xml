<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorLightGrey</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="buttonStyle">@style/MyButton</item>
        <item name="editTextStyle">@style/MyEditText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>
    <style name="MyButton" parent="TextAppearance.AppCompat.Button">
    <item name="android:background">@drawable/button</item>
    <item name="android:textColor">@color/colorTextDark</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textSize">18sp</item>
    </style>
    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:windowSoftInputMode"> stateHidden</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>


</resources>
